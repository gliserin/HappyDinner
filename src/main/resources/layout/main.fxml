<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<StackPane prefHeight="800.0"
           prefWidth="1300.0"
           xmlns="http://javafx.com/javafx/8.0.172-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.odhs.happydinner.ui.MainController">

    <BorderPane styleClass="mainBorderPane">

        <padding>
            <Insets bottom="10" left="30" right="30" top="10"/>
        </padding>

        <top>
            <VBox alignment="TOP_CENTER">
                <Text fx:id="text_appName"
                      fill="navy"
                      text="Dummy Text">
                    <VBox.margin>
                        <Insets bottom="30" top="20"/>
                    </VBox.margin>
                </Text>
            </VBox>

        </top>

        <center>
            <VBox>
                <VBox>
                    <VBox alignment="TOP_CENTER">
                        <Text fx:id="text_notice"
                              text="로딩중...">
                            <font>
                                <Font size="25"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="10"/>
                            </VBox.margin>
                        </Text>
                    </VBox>

                    <Text fx:id="text_breakfast"
                          text="아침">
                        <font>
                            <Font size="30"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="10"/>
                        </VBox.margin>
                    </Text>


                    <Text fx:id="text_breakfast_content">
                        <font>
                            <Font size="10"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="15"/>
                        </VBox.margin>
                    </Text>


                    <Text fx:id="text_lunch"
                          text="점심">
                        <font>
                            <Font size="30"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="10"/>
                        </VBox.margin>
                    </Text>

                    <Text fx:id="text_lunch_content">
                        <font>
                            <Font size="10"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="15"/>
                        </VBox.margin>
                    </Text>

                    <Text fx:id="text_dinner"
                          text="저녁">
                        <font>
                            <Font size="30"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="10"/>
                        </VBox.margin>
                    </Text>

                    <Text fx:id="text_dinner_content">
                        <font>
                            <Font size="10"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="15"/>
                        </VBox.margin>
                    </Text>

                </VBox>
                
                <VBox maxWidth="700"
                      styleClass="toolBox">
                    <VBox.margin>
                        <Insets left="30" top="50"/>
                    </VBox.margin>
                    <padding>
                        <Insets topRightBottomLeft="20"/>
                    </padding>
                    <Text fx:id="text_weekMeal"
                          text="이번 주 급식 보기">
                        <VBox.margin>
                            <Insets bottom="10"/>
                        </VBox.margin>
                        <font>
                            <Font size="20"/>
                        </font>
                    </Text>
                    <HBox>
                        <VBox.margin>
                            <Insets bottom="30"/>
                        </VBox.margin>
                        <Button fx:id="button_monday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="월"/>
                        <Button fx:id="button_tuesday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="화"/>
                        <Button fx:id="button_wednesday" prefHeight="35" prefWidth="40" styleClass="dayButton"
                                text="수"/>
                        <Button fx:id="button_thursday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="목"/>
                        <Button fx:id="button_friday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="금"/>
                        <Button fx:id="button_saturday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="토"/>
                        <Button fx:id="button_sunday" prefHeight="35" prefWidth="40" styleClass="dayButton" text="일"/>
                    </HBox>

                    <HBox>
                        <VBox>
                            <Text fx:id="text_copy"
                                  text="복사하기">
                                <VBox.margin>
                                    <Insets bottom="10"/>
                                </VBox.margin>
                                <font>
                                    <Font size="20"/>
                                </font>
                            </Text>

                            <Button fx:id="button_copy"
                                    prefHeight="30"
                                    prefWidth="90"
                                    text="복사하기"/>
                        </VBox>

                        <VBox>
                            <HBox.margin>
                                <Insets left="60"/>
                            </HBox.margin>
                            <Text fx:id="text_search"
                                  text="이미지검색">
                                <VBox.margin>
                                    <Insets bottom="10"/>
                                </VBox.margin>
                                <font>
                                    <Font size="20"/>
                                </font>
                            </Text>

                            <HBox alignment="CENTER_LEFT">
                                <TextField prefHeight="30"
                                           fx:id="textfield_search"
                                           onAction="#onEnter"/>
                                <Button text="검색"
                                        prefHeight="30"
                                        prefWidth="60"
                                        fx:id="button_search">
                                    <HBox.margin>
                                        <Insets left="10"/>
                                    </HBox.margin>
                                </Button>
                            </HBox>
                        </VBox>

                        <VBox>
                            <HBox.margin>
                                <Insets left="60"/>
                            </HBox.margin>
                            <Text fx:id="text_refresh"
                                  text="새로고침">
                                <VBox.margin>
                                    <Insets bottom="10"/>
                                </VBox.margin>
                                <font>
                                    <Font size="20"/>
                                </font>
                            </Text>
                            <Button text="새로고침"
                                    prefHeight="30"
                                    prefWidth="90"
                                    fx:id="button_refresh"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </center>


        <bottom>
            <VBox alignment="BOTTOM_CENTER">
                <Text fx:id="text_errorMessage"
                      styleClass="errorText">
                    <VBox.margin>
                        <Insets bottom="15"/>
                    </VBox.margin>
                </Text>
                <ImageView fitHeight="76" fitWidth="270">
                    <Image url="/drawable/aramark.jpg"/>
                </ImageView>
            </VBox>
        </bottom>

    </BorderPane>
</StackPane>
